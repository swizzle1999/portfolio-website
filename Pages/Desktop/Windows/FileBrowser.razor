@inject IJSRuntime JSRuntime
@using WebsiteWASM.Pages.Desktop.Components;
@inject WebsiteWASM.Services.UIEventService UIEventService
@implements IWindow

<Window @ref="Window" Title="@Title" TopPercentage="40" LeftPercentage="40">
    <div>test</div>
</Window>
@code {
    [Parameter]
    public string? Title { get; set; }

    public IWindow? Window { get; set; }

    public void Show()
    {
        Window?.Show();
    }

    public void Hide()
    {
        Window?.Hide();
    }

    public void Toggle()
    {
        Window?.Toggle();
    }
}
